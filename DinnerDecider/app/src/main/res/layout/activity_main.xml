<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="131dp"
            android:layout_height="49dp"
            android:text="@string/chinese"
            app:layout_constraintHorizontal_bias="0.501" android:id="@+id/selectedFoodtext"
            android:fontFamily="@font/muli_bold" android:textSize="30sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher_foreground"
            android:id="@+id/imageView2" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="DECIDE!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/decide_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Borderless"
            app:layout_constraintStart_toStartOf="parent" android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/muli_bold" android:textSize="18sp"
            android:textColor="@android:color/background_light"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addFoodtext"
            android:fontFamily="@font/muli_bold" android:hint="Add new food ... "
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="180dp"
            app:layout_constraintBottom_toBottomOf="@+id/decide_button"/>
    <Button
            android:text="ADD FOOD"
            android:layout_width="230dp"
            android:layout_height="51dp"
            android:id="@+id/AddFoodButton" style="@style/Borderless"
            android:fontFamily="@font/muli_bold" android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/background_light" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="120dp" app:layout_constraintBottom_toBottomOf="@+id/decide_button"/>

</android.support.constraint.ConstraintLayout>